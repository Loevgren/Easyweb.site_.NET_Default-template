<ew-template for-key="heroPage" />

<div class="section-pad">
    <div class="section-inner">
        <div class="timeline" ew-list="timeline">
            <div class="timeline-item">
                <div class="year" ew-for="year"></div>
                <h3 ew-for="event"></h3>
                <div class="description" ew-for="description"></div>
                <div class="timeline-img" ew-if-key="Image">
                    <img ew-for-src="Image" />
                </div>
            </div>
        </div>
    </div>
</div>

@* Render any flex sections (introduction, facts, textMedia, etc.) *@
<ew-template for-key="Flex" />
